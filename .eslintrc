{
  "env": {
    "browser": true
  },
  "parser": "babel-eslint",
  "extends": ["airbnb-base"],
  "plugins": ["html"],
  "globals": {
    "WEBPACK_CONST": false
  },
  "settings": {
    "import/resolver": {
      "webpack": {
        "config": "build/resolve.js"
      }
    }
  },
  "rules": {
    "semi": [2, "never"],
    "comma-dangle": [2, "never"],
    "no-console": [1, { "allow": ["warn", "error"] }],
    "no-mixed-operators": 1,
    "no-bitwise": 1,
    "no-alert": 1,
    "no-debugger": 0,
    "no-param-reassign": 0,
    "no-plusplus": 0,
    "object-curly-newline": 0,
    "arrow-parens": 0,
    "function-paren-newline": 0,
    "import/no-extraneous-dependencies": 0
  }
}
